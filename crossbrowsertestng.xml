<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Cross Browser Test Suite">
    <test name="Testing in chrome browser">
        <parameter name="browser" value="chrome" />
        <parameter name="url" value="http://demowebshop.tricentis.com/"/>
        <classes>
            <class name="com.demowebshop.test.HomePageTestParameter">
                <methods>
                    <include name="verifyHomePageTitle"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Testing in FireFox browser">
        <parameter name="browser" value="Firefox" />
        <parameter name="url" value="http://demowebshop.tricentis.com/"/>
        <classes>
            <class name="com.demowebshop.test.HomePageTestParameter">
                <methods>
                    <include name="verifyHomePageTitle"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>